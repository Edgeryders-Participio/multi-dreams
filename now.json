{
  "version": 2,
  "name": "dreams",
  "builds": [
    { "src": "ui/next.config.js", "use": "@now/next" },
    { "src": "api/index.js", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/api", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "ui/$1", "continue": true }
  ],
  "regions": ["bru1"],
  "env": {
    "MONGODB_URI": "@mongodbatlas-uri"
  },
  "scope": "participio"
}
